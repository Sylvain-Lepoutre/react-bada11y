---
import BaseLayout from "../../../../layouts/BaseLayout.astro";

import { A11yFont } from "../../../../components/pages/persona4/persona4font2/A11yFont";
import { A11yFontExp } from "../../../../components/pages/persona4/persona4font2/A11yFontExp";
import { DivLink } from "../../../../components/pages/personaHome/DivLink";
import { Header } from "../../../../components/UI/headers/Header";
import { Main } from "../../../../components/UI/main/Main";

import { personas } from "../../../../data/personas";

const { name, personaHomeUrl, steps } = personas.claire;
---

<BaseLayout title={`${steps[1]?.pages[1]?.name} - ${name} - Inotest`}>
  <Header heading={name} textContent={steps[1]?.pages[1]?.name ?? ""} />

  <Main>
    <A11yFont />
    <A11yFontExp />
  </Main>

  <DivLink
    labelLink1={`Accueil ${name}`}
    labelLink2="Accueil Inotest"
    srLabelLink1={`Revenir à la page d'accueil de ${name}`}
    srLabelLink2="Revenir à la page d'accueil Inotest"
    urlLink1={personaHomeUrl}
    urlLink2="/"
  />
</BaseLayout>
